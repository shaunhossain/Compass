<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidDomInspection -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCAAA4"
    tools:context="com.shaunhossain.compass.TicketCancel">

    <TextView
        android:fontFamily="serif"
        android:textStyle="bold"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="120dp"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:id="@+id/adminTV"
        android:layout_width="wrap_content"
        android:text="Cancel"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="serif"
        android:layout_marginLeft="5dp"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@id/adminTV"
        android:layout_alignBottom="@id/adminTV"
        android:textSize="27sp"
        android:id="@+id/loginTV"
        android:layout_width="wrap_content"
        android:text="Ticket ."

        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="110dp"
        android:layout_below="@id/adminTV"
        android:layout_centerHorizontal="true"
        android:id="@+id/input_layout_username"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        >

    </android.support.design.widget.TextInputLayout>

    <Button
        android:textColor="@color/white"
        android:fontFamily="serif"
        android:onClick="cancelTicket"
        android:id="@+id/loginBTN"
        tools:mockup_opacity="@android:integer/config_longAnimTime"
        android:text="Cancel"
        android:layout_marginTop="5dp"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_width="290dp"
        android:layout_below="@id/input_layout_username"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/input_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginBTN"
        android:layout_alignStart="@+id/input_layout_username"
        android:hint="Ticket cancel token" />

</RelativeLayout>
